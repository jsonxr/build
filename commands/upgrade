#!/bin/bash

#-----------------------------------------------------------------------------
# Help Description
#-----------------------------------------------------------------------------
if [ "$1" == "--help" ]; then
  if [ ! "$2" == "--verbose" ]; then
    echo "Upgrade build system."
  else  
    echo "No verbose help available."
  fi
  exit
fi


#-----------------------------------------------------------------------------
# Command
#-----------------------------------------------------------------------------
pushd /usr/local/lib/jsonxr-build
git pull
popd